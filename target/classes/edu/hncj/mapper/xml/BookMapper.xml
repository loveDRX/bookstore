<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hncj.mapper.BookMapper">

    <!-- 开启二级缓存 
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> -->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="edu.hncj.entity.Book">
        <id column="book_id" property="bookId" />
        <result column="book_name" property="bookName" />
        <result column="book_author" property="bookAuthor" />
        <result column="money" property="money" />
        <result column="original_price" property="originalPrice" />
        <result column="book_printer" property="bookPrinter" />
        <result column="book_date" property="bookDate" />
        <result column="book_image" property="bookImage" />
        <result column="browse_count" property="browseCount" />
        <result column="recommend_value" property="recommendValue" />
        <result column="sales" property="sales" />
        <result column="book_inventory" property="bookInventory" />
        <result column="book_state" property="bookState" />
        <result column="book_description" property="bookDescription" />
        <result column="book_type" property="bookType" />
    </resultMap>

</mapper>
